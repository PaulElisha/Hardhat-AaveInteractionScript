{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "printWidth": 80,
        "tabWidth": 1,
        "semi": false,
        "useTabs": false,
        "singleQuote": true,
        "bracketSpacing": false,
        "trailingComma": "es5"
      }
    }
  ]
}
